{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://your-production-frontend.com",
      "https://another-trusted-partner.com"
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "",
    "HangfireConnection": ""
  },
  "DatabaseProvider": "PostgreSql",
  "Auth": {
    "Authority": "https://your-identity-server.com",
    "ApiName": "your_production_api_name"
  },
  "ExternalServices": {
    "ProductApiBaseUrl": "https://api.external-products.com/"
  },
  "Secrets": {
    "ClientSecret": "cok-gizli-ve-uzun-bir-sifre"
  }
